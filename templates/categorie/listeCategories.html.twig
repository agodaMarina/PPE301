{% extends "main/template.html.twig" %}
{% block contenu %}
<div class="row">
    <div class="col-lg-12">
        <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-3">Liste Des Categories</h4>
              
            </div>
            <a href="{{path ('create_categorie')}}" class="btn btn-primary add-list"><i class="ri-add-line" style="color: #ffffff;"></i>Ajouter</a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive rounded mb-3">
        <table class="data-table table mb-0 tbl-server-info">
            <thead class="bg-white text-uppercase">
                <tr class="ligth ligth-data">
                   
                    <th>libell√©</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="ligth-body">
                {% for categorie in categories %}
                    
                
                <tr>
                    
                    <td>{{categorie.libelle}}</td>
                    <td>
                        <div class="d-flex align-items-center list-action">
                            <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Details"
                                href="{{path ('detail_categorie', {'id': categorie.id})}}"><i class="ri-eye-line mr-0"></i></a>
                            <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Modifier"
                                href="{{path ('update_categorie', {'id': categorie.id})}}"><i class="ri-pencil-line mr-0"></i></a>
                            
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock contenu %}