{% extends "main/template.html.twig" %}

{% block contenu %}

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-3">Liste Des Fournisseurs</h4>
                
            </div>
            <a href="{{path('create_fournisseur')}}" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Ajouter
                </a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive rounded mb-3">
            <table class="data-table table mb-0 tbl-server-info">
                <thead class="bg-white text-uppercase">
                    <tr class="ligth ligth-data">
                        <th>
                            <div class="checkbox d-inline-block">
                                <input type="checkbox" class="checkbox-input" id="checkbox1">
                                <label for="checkbox1" class="mb-0"></label>
                            </div>
                        </th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Adresse</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="ligth-body">
                    {% for fournisseur in listefournisseur %}


                        <tr>
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox2">
                                    <label for="checkbox2" class="mb-0"></label>
                                </div>
                            </td>
                            
                            <td>{{fournisseur.nomFournisseur}}</td>
                            <td>{{fournisseur.emailFournisseur}}</td>
                            <td>{{fournisseur.contactFournisseur}}</td>
                            <td>{{fournisseur.adresseFournisseur}}</td>
                            <td>
                                <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title=""
                                        data-original-title="Detail" href="{{path ('detail_fournisseur',{'id':fournisseur.id})}}"><i class="ri-eye-line mr-0"></i></a>
                                    <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title=""
                                        data-original-title="Modifier" href="{{ path ('update_fournisseur',{'id':fournisseur.id})}}"><i class="ri-pencil-line mr-0"></i></a>
                                    <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title=""
                                        data-original-title="Supprimer" href="{{ path ('delete_fournisseur',{'id':fournisseur.id})}}"><i class="ri-delete-bin-line mr-0"></i></a>
                                </div>
                            </td>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endblock contenu %}