{% extends "main/template.html.twig" %}

{% block contenu %}
<div class="row">
    <div class="col-sm-12">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success" role="alert">
                <div class="iq-alert-text">
                    {{message}}
                </div>
             </div>  
            {% endfor %}
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Modifier la  Tva</h4>
                </div>
            </div>
            <div class="card-body">
                {{form_start (formulaire)}}
               
                    <div class="row">

                        <div class="col-md-6">   

                            <div class="form-group">
                                {{ form_label (formulaire.valeur,"Valeur *")}}
                                {{form_widget(formulaire.valeur, {'attr':{class:'form-control',"placeholder":"Entrer le nom de l'article"}})}} 
                                <div class="help-block with-errors"></div>
                            </div>

                        </div>    
                        <div class="col-md-6">
                            <div class="form-group">
                                {{form_label(formulaire.Statut,"Statut *")}}
                                {{form_widget(formulaire.Statut, {'attr':{class:'selectpicker form-control', "data-style":"py-0"}})}}
                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Modifier</button>
                    <a href="{{ path('liste_tva') }}"class="btn btn-success mr-2">Liste</a>
               
                {{form_end (formulaire)}}
            </div>
        </div>
    </div>
</div>
{% endblock contenu %}