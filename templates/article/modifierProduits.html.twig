{% extends "main/template.html.twig" %}
{% block title %}
    Mofication d'Article
{% endblock title %}

{% block contenu %}

<div class="row">
    <div class="col-sm-12">
        {% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            <div class="iq-alert-text">
                {{message}}
            </div>
        </div>
        {% endfor %}
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Modifier l'article: {{ article.nomArticle}} </h4>
                </div>
            </div>
            <div class="card-body">
                {{form_start(formulaire)}}

                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            {{ form_label (formulaire.nomArticle,"Nom *")}}
                            {{form_widget(formulaire.nomArticle, {'attr':{class:'form-control'}})}}
                            <div class="help-block with-errors"></div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label (formulaire.nomArticle,"Categorie *")}}
                            {{form_widget(formulaire.categorie,{'attr':{class:'form-control'}})}}
                        </div>
                    </div>
                  
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label (formulaire.prixArticle,"Prix *")}}
                            {{form_widget(formulaire.prixArticle, {'attr':{class:'form-control'}})}}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label (formulaire.fournisseurs,"Fournisseur (s) *")}}
                            {{form_widget(formulaire.fournisseurs, {'attr':{class:'selectpicker form-control',
                            "data-style":"py-0"}})}}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label (formulaire.imageFile,"Image")}}
                            {{form_widget(formulaire.imageFile, {'attr':{class:'form-control image-file'}})}}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label (formulaire.description,"Description/ DÃ©tails sur l'article")}}
                            {{form_widget(formulaire.description, {'attr':{class:'form-control'}})}}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Modifier</button>

                <a href="{{ path('liste_article') }}" class="btn btn-success mr-2">Retour</a>
                {{form_end(formulaire)}}
            </div>
        </div>
    </div>
</div>

{% endblock contenu %}