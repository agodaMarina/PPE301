{% extends "main/template.html.twig" %}

{% block contenu %}
    
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Article : {{article.nomArticle}}</h4>
                </div>
            </div>
            <div class="card-body">
               

                <table class="table">
                    <tbody>
                       
                        <tr>
                            <th>Nom</th>
                            <td>{{ article.nomArticle }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ article.prixArticle }}</td>
                        </tr>
             
                        <tr>
                            <th>Quantité en stock</th>
                            <td>{{ article.quantiteArticle }}</td>
                        </tr>

                         <tr>
                            <th>Categorie</th>
                            <td>{{ article.categorie }}</td>
                        </tr> 
                        <tr>
                            <th>Fournisseur(s)</th>
                            <td>
                                {% for row in fournisseurs %}
                                    {{row.nomFournisseur}}, 
                                    {% else %}
                                    
                                Aucun Fournisseur enregistré pour ce article
                                 {% endfor %}</td>
                        </tr> 

                        <tr>
                            <th>Description</th>
                            <td>{{ article.description}}</td>
                        </tr>
                       
                        <img src="{{vich_uploader_asset(article,'imageFile')}}" alt="" style="width:150px">
                    </tbody>
                </table>
            
                <a href="{{ path('liste_article') }}"class="btn btn-success mt-2">Liste</a>
            
                <a href="{{ path('update_article', {'id': article.id})}}"class="btn btn-primary mt-2">Modifier</a>

                <div class="modal fade" id="new-order" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="popup text-left">
                                    <h4 class="mb-3">New Order</h4>
                                    <div class="content create-workform bg-body">
                                        <div class="pb-3">
                                            <label class="mb-2">Email</label>
                                            <input type="text" class="form-control" placeholder="Enter Name or Email">
                                        </div>
                                        <div class="col-lg-12 mt-4">
                                            <div class="d-flex flex-wrap align-items-ceter justify-content-center">
                                                <div class="btn btn-primary mr-4" data-dismiss="modal">Cancel</div>
                                                <div class="btn btn-outline-primary" data-dismiss="modal">Create</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
               
            
            </div>
        </div>
    </div>
</div>

{% endblock contenu %}