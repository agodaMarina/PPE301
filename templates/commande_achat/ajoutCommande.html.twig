{% extends "main/template.html.twig" %}

{% block title %}
    Ajouter une Commande
{% endblock title %}

{% block contenu %}
<div class="container-fluid add-form-list">
    <div class="row">
        <div class="col-sm-12">
            {% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            <div class="iq-alert-text">
                {{message}}
            </div>
         </div>  
        {% endfor %}
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Ajouter Une Nouvelle Commande</h4>
                    </div>
                </div>
                <div class="card-body">
                    {{form_start(formulaire)}}
                   
                        <div class="row">
                           
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.NumeroCommande, " Numéro *")}}
                                    {{form_widget(formulaire.NumeroCommande, {'attr':{class:'form-control', id:'dob', name:'dob'}})}}
                                     
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.articles, "articles *")}}
                                    {{form_widget(formulaire.articles,  {'attr':{class:'selectpicker form-control', "data-style":"py-0"}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.fournisseur, "Fournisseur")}}
                                    {{form_widget(formulaire.fournisseur,  {'attr':{class:'selectpicker form-control', "data-style":"py-0"}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.Tva, "Tva")}}
                                    {{form_widget(formulaire.Tva,  {'attr':{class:'selectpicker form-control', "data-style":"py-0"}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.TotalTVA, "Total Tva")}}
                                    {{form_widget(formulaire.TotalTVA,  {'attr':{class:'form-control'}})}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(formulaire.TotalHT, "Total HT")}}
                                    {{form_widget(formulaire.TotalHT,  {'attr':{class:'form-control'}})}}
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{form_label(formulaire.TotalTTC, " Montant Total TTC")}}
                                    {{form_widget(formulaire.TotalTTC,  {'attr':{class:'form-control'}})}}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{form_label(formulaire.MontantTotalEnLettre, "Montant Total TTC en lettre")}}
                                    {{form_widget(formulaire.MontantTotalEnLettre,  {'attr':{class:'form-control'}})}}
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{form_label(formulaire.ConditionDeReglement, "Condition De Règlement")}}
                                    <div id="quill-tool">
                                        <button class="ql-bold" data-toggle="tooltip" data-placement="bottom"
                                            title="Bold"></button>
                                        <button class="ql-underline" data-toggle="tooltip" data-placement="bottom"
                                            title="Underline"></button>
                                        <button class="ql-italic" data-toggle="tooltip" data-placement="bottom"
                                            title="Add italic text <cmd+i>"></button>
                                        
                                    </div>
                                    <div id="quill-toolbar">
                                        {{form_widget(formulaire.ConditionDeReglement)}}

                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Ajouter</button>
                        <a href="{{ path('liste_commande') }}"class="btn btn-success mr-2">Retour</a>                
                  
                    {{form_end(formulaire)}}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock contenu %}