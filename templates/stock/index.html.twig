{% extends "main/template.html.twig" %}

{% block title %}
Liste des Stocks
{% endblock title %}

{% block contenu %}

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-3">Liste Des Stocks</h4>
            </div>
            <a href="{{path('create_stock')}}" class="btn btn-primary add-list"><i class="ri-add-line"
                    style="color: #ffffff;"></i>Ajouter</a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive rounded mb-3">

            <table class="data-table table mb-0 tbl-server-info">
                <thead class="bg-white text-uppercase">
                    <tr class="ligth ligth-data">

                        <th>Article</th>
                        <th>Quantit√© en stock</th>
                       
                        <th>quantite minimale</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="ligth-body">
                    {% for stock in stocks %}

                    <tr>

                        <td>
                            {{stock.article}}
                        </td>
                        <td>{{stock.quantite}}</td>

                       
                        <td>{{stock.quantiteAlerte}}</td>


                        <td>
                            <div class="d-flex align-items-center list-action">
                                <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title=""
                                    data-original-title="View" href="{{path ('detail_stock', {'id':stock.id})}}"><i
                                        class="ri-eye-line mr-0"></i></a>
                                <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title=""
                                    data-original-title="Edit" href="{{path ('update_stock',{'id':stock.id})}}"><i
                                        class="ri-pencil-line mr-0"></i></a>

                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement</td>
                    </tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock contenu %}