{% extends "main/template.html.twig" %}



{% block contenu %}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Stock de : </h4>
                </div>
            </div>
            <div class="card-body">


                <table class="table">
                    <tbody>
                        <tr>
                            <th>Article</th>
                            <td>{{ stock.article }}</td>
                        </tr>
                        <tr>
                            <th>Quantité</th>
                            <td>{{ stock.quantite }}</td>
                        </tr>

                        <tr>
                            <th>Quantité minimale</th>
                            <td>{{ stock.quantiteAlerte }}</td>
                        </tr>
                        {# <tr>
                            <th> Dernière Mise à jour </th>
                            <td>{{ stock.date ? stock.date|date('Y-m-d') : '' }}</td>
                        </tr> #}

                    </tbody>
                </table>


                <a href="{{ path('liste_stock') }}" class="btn btn-success mt-2">Liste</a>

                <a href="{{ path('update_stock', {'id': stock.id}) }}" class="btn btn-primary mt-2">Modifier</a>

                {{ include('stock/_delete_form.html.twig') }}


            </div>
        </div>
    </div>
</div>

{% endblock contenu %}