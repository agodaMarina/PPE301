{% extends "main/template.html.twig" %}

{% block title %}
Modifier un Stock
{% endblock title %}

{% block contenu %}
<div class="row">
    <div class="col-sm-12">
        {% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            <div class="iq-alert-text">
                {{message}}
            </div>
        </div>
        {% endfor %}
        <div class="card">

            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Modifier le Stock de: {{stock.article}} </h4>
                </div>

            </div>
            <div class="card-body">
                {{form_start(form)}}

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label (form.article,"article *")}}
                            {{form_widget(form.article, {'attr':{class:'selectpicker form-control', "data-style":"py-0"}})}}
                            <div class="help-block with-errors"></div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label (form.quantite,"Quantite *")}}
                            {{form_widget(form.quantite, {'attr':{class:'form-control'}})}}
                            <div class="help-block with-errors"></div>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label (form.quantiteAlerte,"Quantit√© minimale *")}}
                            {{form_widget(form.quantiteAlerte, {'attr':{class:'form-control'}})}}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    
                    
                </div>
                <button type="submit" class="btn btn-primary mr-2">Modifier</button>
                <a href="{{ path('liste_stock') }}" class="btn btn-success mr-2">Retour</a>

                {{form_end(form, {render_rest: false})}}
            </div>
        </div>
    </div>
</div>


{% endblock contenu %}